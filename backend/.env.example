# Configurações do Banco de Dados PostgreSQL (Supabase)
# Substitua pelos valores reais do seu projeto Supabase

DB_HOST=db.your-project-id.supabase.co
DB_PORT=5432
DB_NAME=postgres
DB_USER=postgres
DB_PASSWORD=your-database-password

# URL de conexão completa (alternativa aos campos individuais)
DATABASE_URL=postgresql://postgres:your-password@db.your-project-id.supabase.co:5432/postgres

# Configurações da aplicação
DEBUG=True
PORT=8000

# Supabase API (se necessário para funcionalidades específicas)
SUPABASE_URL=https://your-project-id.supabase.co
SUPABASE_ANON_KEY=your-anon-key
SUPABASE_SERVICE_ROLE_KEY=your-service-role-key

# CORS settings
ALLOWED_ORIGINS=http://localhost:3000,https://your-netlify-app.netlify.app