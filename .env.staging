# Configuração para ambiente de staging/teste
# Para testes em ambiente próximo à produção

# ===================
# DATABASE (STAGING)
# ===================
DATABASE_URL=postgresql://postgres:password@staging-db.railway.app:5432/railway
# ou Supabase staging
# DATABASE_URL=postgresql://postgres:password@db.staging-project.supabase.co:5432/postgres

# ===================
# REDIS (STAGING)
# ===================
REDIS_URL=redis://default:password@staging-redis.upstash.io:6379

# ===================
# API KEYS (STAGING)
# ===================
FOOTYSTATS_API_KEY=example
SOFASCORE_API_KEY=

# ===================
# FRONTEND (STAGING)
# ===================
NEXT_PUBLIC_API_URL=https://supermittos-staging.vercel.app

# ===================
# SECURITY (STAGING)
# ===================
JWT_SECRET=staging_jwt_secret_diferente_de_producao
ENCRYPTION_KEY=staging_encryption_key_diferente_de_producao

# ===================
# DEPLOYMENT
# ===================
ENVIRONMENT=staging
DEBUG=false
LOG_LEVEL=INFO

# ===================
# MONITORING (STAGING)
# ===================
SENTRY_DSN=https://staging-sentry-dsn@sentry.io/project-id

# ===================
# PERFORMANCE (STAGING)
# ===================
CACHE_TTL=300
RATE_LIMIT_PER_MINUTE=200