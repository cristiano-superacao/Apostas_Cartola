# Exemplo de arquivo .env para o SuperMittos
# Copie este arquivo para .env e configure as variáveis

# ===================
# DATABASE
# ===================

# Local Development
DATABASE_URL=postgresql://supermittos:supermittos123@localhost:5432/supermittos
POSTGRES_PASSWORD=supermittos123

# Cloud Database Options (escolha uma)
# Supabase: https://supabase.com
# SUPABASE_URL=postgresql://postgres:[YOUR-PASSWORD]@db.[YOUR-PROJECT-REF].supabase.co:5432/postgres
# SUPABASE_ANON_KEY=your_supabase_anon_key
# SUPABASE_SERVICE_KEY=your_supabase_service_key

# Railway: https://railway.app
# RAILWAY_DATABASE_URL=postgresql://postgres:password@containers-us-west-x.railway.app:port/railway

# Neon: https://neon.tech
# NEON_DATABASE_URL=postgresql://user:password@ep-xxx-xxx.us-east-2.aws.neon.tech/neondb

# PlanetScale (MySQL alternative): https://planetscale.com
# PLANETSCALE_DATABASE_URL=mysql://user:password@host.psdb.cloud/database?sslaccept=strict

# Production Database URL (automatically set by cloud provider)
DATABASE_URL_PROD=${DATABASE_URL}

# ===================
# REDIS
# ===================
REDIS_URL=redis://localhost:6379

# ===================
# API KEYS
# ===================

# FootyStats API Key (obtenha em https://footystats.org/api)
FOOTYSTATS_API_KEY=example

# SofaScore API Key (não oficial - use com cautela)
SOFASCORE_API_KEY=

# ===================
# FRONTEND
# ===================
NEXT_PUBLIC_API_URL=http://localhost:8000

# ===================
# SECURITY
# ===================

# JWT Secret (gere uma string aleatória forte)
JWT_SECRET=sua_chave_jwt_super_secreta_aqui

# Encryption key para dados sensíveis
ENCRYPTION_KEY=sua_chave_de_criptografia_aqui

# ===================
# EMAIL (opcional)
# ===================
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USERNAME=seu_email@gmail.com
SMTP_PASSWORD=sua_senha_app
SMTP_FROM=noreply@supermittos.com

# ===================
# MONITORING
# ===================

# Sentry DSN para monitoramento de erros (opcional)
SENTRY_DSN=

# Google Analytics ID (opcional)
GA_TRACKING_ID=

# ===================
# PERFORMANCE
# ===================

# Cache TTL em segundos
CACHE_TTL=300

# Rate limiting
RATE_LIMIT_PER_MINUTE=60

# ===================
# DEVELOPMENT
# ===================

# Modo debug
DEBUG=false

# Log level (DEBUG, INFO, WARNING, ERROR)
LOG_LEVEL=INFO

# ===================
# DEPLOYMENT
# ===================

# Domínio de produção
DOMAIN=supermittos.com

# Environment (development, staging, production)
ENVIRONMENT=development

# ===================
# BACKUP
# ===================

# AWS S3 para backup (opcional)
AWS_ACCESS_KEY_ID=
AWS_SECRET_ACCESS_KEY=
AWS_BUCKET_NAME=supermittos-backups
AWS_REGION=us-east-1